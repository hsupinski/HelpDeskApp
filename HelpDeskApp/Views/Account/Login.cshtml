@model HelpDeskApp.Models.ViewModels.LoginViewModel

<div class="mt-5 d-flex flex-row align-items-center">
    <div class="container mx-auto">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-6">
                <form method="post">
                    <div class="card-group d-block d-md-flex row">
                        @if (!ViewData.ModelState.IsValid || ViewData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger">
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                @if (ViewData["ErrorMessage"] != null)
                                {
                                    <p>@ViewData["ErrorMessage"]</p>
                                }
                            </div>
                        }
                        <div class="card col-md-7 p-4 mb-0">
                            <div class="card-body">
                                <h1>Login</h1>
                                <p class="mb-4 text-body-secondary">Sign In to your account</p>
                                <div class="input-group mb-3">
                                    <input type="text" id="username" class="form-control" placeholder="Username" asp-for="Username">

                                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                                </div>
                                <div class="input-group mb-4">
                                    <input type="password" id="password" class="form-control" placeholder="Password" asp-for="Password">

                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                                <div>
                                <div class="row">
                                    <div class="col-6">
                                        <button type="submit" class="btn btn-dark">Login</button>
                                    </div>

                                    <p class="mb-2 mt-3 text-muted">
                                        <a href="@Url.Action("ForgotPassword", "Account")">Forgot password?</a>

                                    <p class="mb-0 text-muted">
                                        Don't have an account? <a href="@Url.Action("Register", "Account")" class="f-w-400">Register</a>
                                </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>