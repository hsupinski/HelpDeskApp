@model List<HelpDeskApp.Models.ViewModels.LogDetailsViewModel>


<div class="container mt-4">
    <h2>Chat Log Details</h2>
    <div class="card">
        <div class="card-body">
            <h4>Topic: @Model.FirstOrDefault()?.TopicName</h4>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Time</th>
                        <th>Event Type</th>
                        <th>Username</th>
                        <th>Content</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in Model)
                    {
                        <tr>
                            <td>@log.EventTime.ToString("g")</td>
                            <td>@log.EventType</td>
                            <td>@log.Username</td>
                            <td>@log.Content</td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>