@model HelpDeskApp.Models.Domain.Department

<h2 class="mb-4">Edit Department</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="departmentHeadId" class="control-label">Department Head</label>
        <select name="departmentHeadId" class="form-control">
            @foreach (var user in ViewBag.Users)
            {
                <option value="@user.Id" selected="@(user.Id == Model.DepartmentHeadId)">@user.UserName</option>
            }
        </select>
    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}